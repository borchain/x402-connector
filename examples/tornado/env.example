# x402 Configuration for Tornado Example

# Required: Your Solana address for receiving payments (cold wallet)
X402_PAY_TO_ADDRESS=REPLACE_WITH_YOUR_SOLANA_ADDRESS

# Required: Private key for settlement (hot wallet, base58 format)
# NEVER commit this to git! Keep it in .env only
X402_SIGNER_KEY=REPLACE_WITH_YOUR_PRIVATE_KEY_BASE58

# Optional: Solana network (mainnet/devnet/testnet)
X402_NETWORK=solana-mainnet  # Use 'solana-devnet' for testing

# Optional: Default price for endpoints
X402_PRICE=$0.01

# Optional: Custom RPC URL (if not set, uses public RPC)
# X402_RPC_URL=https://api.devnet.solana.com

# Optional: Debug mode (True = simulated transactions, False = real blockchain)
X402_DEBUG_MODE=True

# Optional: Use durable nonce (solves blockhash expiry issue)
X402_USE_DURABLE_NONCE=False
# X402_NONCE_ACCOUNT=YourNonceAccountAddress

# Tornado Options
TORNADO_DEBUG=False

