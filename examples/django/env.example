# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================================================
# x402 Configuration - Solana
# ========================================================================

# REQUIRED: Your Solana address for receiving payments (base58 format, 32-44 chars)
# Generate with: solana-keygen new --outfile ~/.config/solana/payment-wallet.json
X402_PAY_TO_ADDRESS=YourSolanaAddressGoesHereBase58Format44Ch

# OPTIONAL: Default price (each endpoint can override with @require_payment(price='$X'))
# X402_PRICE=$0.01

# Solana network (mainnet, devnet, or testnet)
X402_NETWORK=solana-mainnet  # Use 'solana-devnet' for testing

# REQUIRED FOR REAL TRANSACTIONS: Server's private key for settlement (base58 format)
# This is used to broadcast transactions to Solana blockchain
# Generate with: solana-keygen new --no-bip39-passphrase
# IMPORTANT: Keep this secret! Never commit to git!
# 
# ⚠️ WITHOUT THIS: Demo mode (signatures verified, NO real transactions)
# ✅ WITH THIS: Real mode (actual USDC transfers on blockchain)
X402_SIGNER_KEY=YourBase58PrivateKey88CharactersLongGeneratedBySolanaKeygen

# Optional: Custom Solana RPC URL
# If not set, uses public RPC based on X402_NETWORK
# X402_RPC_URL=https://api.mainnet-beta.solana.com  # For mainnet
# X402_RPC_URL=https://api.devnet.solana.com  # For devnet

# Optional: Debug mode (True = simulate, False = broadcast real transactions)
# Default is True for safety - set to False only when ready for real money!
X402_DEBUG_MODE=True

# ========================================================================
# Durable Transaction Nonces (Recommended for Production)
# ========================================================================
# Durable nonces solve the blockhash expiry problem (~60 second timeout)
# With durable nonces, transactions NEVER expire!
#
# Setup:
# 1. Create nonce account:
#    solana create-nonce-account nonce-keypair.json 0.0015 --url mainnet-beta
# 2. Get the address:
#    solana-keygen pubkey nonce-keypair.json
# 3. Set the address below (NOT the file path):
#
X402_USE_DURABLE_NONCE=False
X402_NONCE_ACCOUNT=YourNonceAccountAddressBase58Format44Ch
