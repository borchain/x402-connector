# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================================================
# x402 Configuration - Solana
# ========================================================================

# Your Solana address for receiving payments (base58 format)
X402_PAY_TO_ADDRESS=DYw8jCTfwHNRJhhmFcbXvVDTqWMEVFBX6ZKUmG5CNSKK

# Price per request (default: $0.01)
X402_PRICE=$0.01

# Solana network (mainnet, devnet, or testnet)
X402_NETWORK=solana-devnet

# Server's private key for settlement (base58 format)
# Generate with: solana-keygen new
# IMPORTANT: Keep this secret! Never commit to git!
X402_SIGNER_KEY=your_base58_private_key_here

# Optional: Custom Solana RPC URL
# X402_RPC_URL=https://api.devnet.solana.com
